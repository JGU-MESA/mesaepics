##=====================================
##=============== CALC Prefl_vs_i======
record(ai, "steam:prefl_vs_i:slope_set") {
     field(DESC, "I_electron depending on Prefl")
     field(INP, "6.596e-7") # A/W
     field(EGU, "A/W")
     field(LOPR, "1e-15")
     field(HOPR, "1e-2")
     field(PREC, "3")
     field(FLNK, "steam:prefl_vs_i:i_get")
}


record(calc, "steam:prefl_vs_i:i_get") {
     field(DESC, "I_electron depending on Prefl")
     field(INPA, "steam:prefl_vs_i:slope_set") # A/W
     field(INPB, "$(P)$(R)pow_get") # in W
     field(EGU, "A")
     field(LOPR, "0")
     field(CALC, "A*B")
     field(PREC, "3")
     field(SCAN, "Passive")
}

