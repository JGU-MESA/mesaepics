#thorlabs dualslider
record(stringout, "$(P)$(R)debug")
{
    field(DTYP, "stream")
    field(OUT, "@dualslider.proto debug $(PORT)")
}

record(waveform, "$(P)$(R)id_get")
{
    field(DESC, "Get device identification")
    field(DTYP, "stream")
    field(INP,  "@dualslider.proto id $(PORT)")
}

record(ai, "$(P)$(R)gs_get")
{
    field(DTYP, "stream")
    field(INP,  "@dualslider.proto gs $(PORT)")
}

record(bi, "$(P)$(R)pos_get")
{
    field(DTYP, "stream")
    field(INP,  "@dualslider.proto gp $(PORT)")
    field(ZNAM, "0")
    field(ONAM, "1")
}


record(bo, "$(P)$(R)pos_set")
{
    field(DTYP, "stream")
    field(OUT,  "@dualslider.proto pos_set $(PORT)")
    field(ZNAM, "bw")
    field(ONAM, "fw")
    field(FLNK, "$(P)$(R)pos_get")
}

