record (mbbi, "$(P)$(R)pos_get")
{
    field (DTYP, "stream")
    field (INP, "@abacus_valve.proto slit_get $(PORT)")
    field (SCAN, ".5 second")
    field (SHFT, 3)
    field (ZRST, "OUT") #slit is not in beam line
    field (ONST, "IN")  #slit is in beam line
    field (TWST, "UNDEFINED")
    field (ONSV, "MINOR") #show "alarm" that slit is in beam line
    field (TWSV, "MAJOR") #Show "alarm", if slit is neither in nor really out the beam line

}

record (bi, "$(P)$(R)pos_set_read")
{
    field (DTYP, "stream")
    field (INP, "@abacus_valve.proto channel_set_read($(RELAIS)) $(PORT)")
    field (SCAN, "5 second")
    field (ZNAM, "OUT")
    field (ONAM, "IN")
}

record (bo, "$(P)$(R)pos_set")
{
    field (DTYP, "stream")
    field (OUT, "@abacus_valve.proto channel_set($(RELAIS)) $(PORT)")
    field (ZNAM, "OUT")
    field (ONAM, "IN")
}
