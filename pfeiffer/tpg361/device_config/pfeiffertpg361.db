record(mbbi, "$(P)$(R)stat_get"){
    field(DESC, "Communication manual page 10")
    field(DTYP, "stream")
    field(INP, "@pfeiffertpg361.proto p_stat_get $(PORT)")
    field(SCAN, ".5 second")
	field(ZRST, "OK")
	field(ONST, "Underrange")
	field(TWST, "Overrange")
	field(THST, "Sensor error")
	field(FRST, "Messstelle ausgeschaltet")
	field(FVST, "No gauge")
	field(SXST, "Identification error")
}

record(ai, "$(P)$(R)p_get_raw"){
    field(DTYP, "stream")
    field(INP, "@pfeiffertpg361.proto p_get_raw $(PORT)")
    field(SCAN, "I/O Intr")
    field(PREC, "2")
    field(EGU, "mbar")
    field(HIHI, "1e-4")
    field(HIGH, "1e-6")
    field(FLNK, "$(P)$(R)p_get")
}

record(calc, "$(P)$(R)p_get"){
    field(INPA, "$(P)$(R)p_get_raw")
    field(INPB, "$(P)$(R)stat_get")
    field(CALC, "B=0? A: 5e-9")
	field(EGU, "mbar")
	field(HOPR, "1e-2")
	field(LOPR, "1e-10")
}
