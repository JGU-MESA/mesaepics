record(bo, "$(P)$(R)on_set") {
    field(VAL, "0")
    field(ZNAM, "On")
    field(ONAM, "Off")
    field(UDF, "0")
    #field(PINI, "YES")
}

record(stringout, "$(P)$(R)debug") {
    field(DTYP, "stream")
    field(OUT, "@gv4qpc_controller.proto debug $(PORT)")
}

record(stringout, "$(P)$(R)pressureunit_set") {
    field(DTYP, "stream")
    field(OUT, "@gv4qpc_controller.proto setPressureUnit $(PORT)")
}

record(stringin, "$(P)$(R)model_get") {
    field(DESC, "A description of the controller")
    field(DTYP, "stream")
    field(INP, "@gv4qpc_controller.proto modelNumber $(PORT)")
    field(SCAN, "Passive")
    field(PINI, "YES")
    field(SDIS, "$(P)$(R)deviceEnabled.RVAL")
}

record(stringin, "$(P)$(R)firmware_get") {
    field(DESC, "Firmware revision level")
    field(DTYP, "stream")
    field(INP, "@gv4qpc_controller.proto firmwareVersion $(PORT)")
    field(SCAN, "Passive")
    field(PINI, "YES")
    field(SDIS, "$(P)$(R)deviceEnabled.RVAL")
}
