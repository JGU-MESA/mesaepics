record(ai,"$(P)$(R)amp_get"){
    field(DTYP,"stream")
    field(INP, "@laser49.proto info_amplitude $(PORT)")
    field(SCAN, "10 second")
}

record(ai,"$(P)$(R)pl_get"){
    field(DTYP,"stream")
    field(INP, "@laser49.proto info_pulselength $(PORT)")
    field(SCAN, "I/O Intr")
}

record(ai,"$(P)$(R)nos_get"){
    field(DTYP,"stream")
    field(INP, "@laser49.proto info_numberofshots $(PORT)")
    field(SCAN, "I/O Intr")
}

record(ai,"$(P)$(R)ct_get"){
    field(DTYP,"stream")
    field(INP, "@laser49.proto info_cycletime $(PORT)")
    field(SCAN, "I/O Intr")
}

record(ai,"$(P)$(R)hl_get"){
    field(DTYP,"stream")
    field(INP, "@laser49.proto info_handshake $(PORT)")
