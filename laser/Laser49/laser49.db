}

record(bo,"$(P)$(R)on_set"){
    field(DTYP,"stream")
    field(OUT, "@laser49.proto on_set $(PORT)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
}

record(ao,"$(P)$(R)pl_set"){
    field(DESC, "Set pulse length")
    field(DTYP,"stream")
    field(OUT, "@laser49.proto pl_set $(PORT)")
    field(DRVL, "1")
    field(LOPR, "1")
    field(EGU, "microseconds")
}

record(ao,"$(P)$(R)a_set"){
    field(DESC, "Set amplitude")
    field(DTYP,"stream")
    field(OUT, "@laser49.proto a_set $(PORT)")
    field(DRVL, "1")
    field(LOPR, "1")
    field(EGU, "None")
}

record(ao,"$(P)$(R)nos_set"){
    field(DESC, "Set number of shots")
    field(DTYP,"stream")
    field(OUT, "@laser49.proto nos_set $(PORT)")
    field(DRVL, "1")
    field(LOPR, "1")
    field(EGU, "None")
